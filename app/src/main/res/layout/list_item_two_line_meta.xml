<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <!-- -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="11dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/ta_regular16_primary"
                android:text="Server name"/>

            <TextView
                android:id="@+id/second_line"
                android:textAppearance="@style/ta_regular14_secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="http://server.url" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/meta"
                android:textAppearance="@style/ta_regular12_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.1.1970" />
        </LinearLayout>

    </LinearLayout>

</layout>