<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppThemeOld" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="textColorSecondary">@color/black_secondary</item>
    </style>

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/brand_orange</item>
        <item name="colorPrimaryDark">@color/brand_orange_dark</item>
        <item name="colorPrimaryVariant">@color/idk</item>
        <item name="colorSecondary">@color/brand_blue</item>
        <item name="colorOnSecondary">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>
